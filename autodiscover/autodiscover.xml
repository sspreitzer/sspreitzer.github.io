<?xml version="1.0" encoding="UTF-8"?>

<clientConfig version="1.1">
  <emailProvider id="spreitzer.ch">
    <domain>spreitzer.ch</domain>
    <displayName>spreitzer.ch Mail</displayName>
    <displayShortName>spreitzer.ch</displayShortName>
    <incomingServer type="imap">
      <hostname>zh.spreitzer.ch</hostname>
      <port>60000</port>
      <socketType>SSL</socketType>
      <authentication>password-encrypted</authentication>
      <username>%EMAILADDRESS%</username>
    </incomingServer>
    <outgoingServer type="smtp">
      <hostname>zh.spreitzer.ch</hostname>
      <port>50000</port>
      <socketType>STARTTLS</socketType>
      <authentication>password-encrypted</authentication>
      <username>%EMAILADDRESS%</username>
    </outgoingServer>
  </emailProvider>
</clientConfig>
